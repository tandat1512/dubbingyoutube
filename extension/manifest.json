{
    "manifest_version": 3,
    "name": "YouTube Dubbing Pro",
    "version": "1.1",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}